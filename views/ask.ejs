<%- include('header') %>

<div class="choose-area pb_90">
  <div class="container mt-4">
    <div class="row">
      <div class="col-12">
        <div class="headline">
          <h2>Leave a Question</h2>
        </div>
      </div>
    </div>
    <hr>

    <br><br>
    

    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-form">
                <div class="col-lg-12 login-form">
                    <form action="/ask" method="POST">
                        <div class="form-group">
                            <label class="form-control-label">Your Name</label>
                            <input type="text" name="questionName" class="form-control" required>
                        </div>
                        <div class="form-group">
                          <div class="form-group">
                              <label class="form-control-label">EMAIL</label>
                              <input name="questionEmail" type="email" class="form-control" required>
                          </div>
                            <label class="form-control-label">LEAVE A QUESTION, BE SPECIFIC</label>
                            <input name="questionMessage" type="text" class="form-control">
                        </div>
                        <div class="col-lg-12 ">

                            <div class="row justify-content-center">
                                <div class="col-4 mb-4">
                                    <button type="submit" class="btn btn-primary">ASK</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


  </div>
</div>



<%- include('footer') %>
